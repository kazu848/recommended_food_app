<%= form_with model: @food, local: true do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name, required: true %>
  </p>
  <p><%= f.file_field :image, accept: "image/png,image/jpg,image/gif" %></p>
  <p>
    <%= f.label :comment %>
    <%= f.text_area :comment %>
  </p>
  
  <p>
    <%= f.submit "送信" %>
  </p>
<% end %>